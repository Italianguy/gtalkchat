<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="gtalkchat.ReceivedChatBubble"
    x:Name="Root"
	d:DesignWidth="332" d:DesignHeight="86">

	<Grid x:Name="LayoutRoot" Background="Transparent" Margin="0,0,100,12">
		<Grid d:LayoutOverrides="Width, Height" Margin="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="16" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Path Data="M0,0 L1,1 L0,1" Fill="{StaticResource PhoneAccentBrush}" HorizontalAlignment="Left" Margin="12,0,0,0" Stretch="Fill" UseLayoutRounding="False" Width="20"/>
			<Grid Grid.Row="1">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Rectangle Grid.RowSpan="2" Fill="{StaticResource PhoneAccentBrush}" />
				<TextBlock Text="{Binding Path=Text, ElementName=Root}" Foreground="White" Margin="12,6,12,0" TextWrapping="Wrap" />
                <TextBlock Grid.Row="1" Text="{Binding Path=TimeStamp, ElementName=Root}" Foreground="#99FFFFFF" HorizontalAlignment="Right" Margin="12,0,12,6" />
			</Grid>
		</Grid>
	</Grid>
</UserControl>