<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="gtalkchat.SentChatBubble"
    x:Name="Root"
	d:DesignWidth="332" d:DesignHeight="86">

	<Grid x:Name="LayoutRoot" Background="Transparent" Margin="100,12,0,0">
		<Grid d:LayoutOverrides="Width">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="16" />
			</Grid.RowDefinitions>
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Rectangle Grid.RowSpan="2" Fill="{StaticResource PhoneAccentBrush}" Opacity="0.7" />
				<TextBlock Text="{Binding Path=Text, ElementName=Root}" Foreground="White" Margin="12,6,12,0" TextWrapping="Wrap" />
                <TextBlock Grid.Row="1" Text="{Binding Path=TimeStamp, ElementName=Root}" Foreground="#99FFFFFF" HorizontalAlignment="Right" Margin="12,0,12,6" />
			</Grid>
			<Path Data="M0,0 L1,1 L1,0" Fill="{StaticResource PhoneAccentBrush}" HorizontalAlignment="Right" Margin="0,0,12,0" Grid.Row="1" Stretch="Fill" UseLayoutRounding="False" Width="20" Opacity="0.7"/>
		</Grid>
	</Grid>
</UserControl>